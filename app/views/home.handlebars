
<div id="description" class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Quality Control Test for Websites</h1>
      <p class="text-muted">Created by <a href="http://zacharyminner.com" target="_blank">Zachary Minner</a></p>
    </div>
  </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
<div id="input" class="row">
  <div class="col-md-6 col-md-offset-3">
    <p>Type a URL in the input field below and click "Go!".</p>
    <p class="information">Information: Must have "http://" in front of URL.</p>
    <form action="/process?form=the_test" method="POST">
      <div class="input-group">
      	<input type="hidden" name="_csrf" value="{{csrf}}">
        <input type="url" name="domain" class="form-control" placeholder="Quality control this...">
        <span class="input-group-btn">
          <input type="submit" value="Go!" class="btn btn-default">
        </span>
      </div><!-- /input-group -->
    </form>
  </div><!-- /.col-md-6 .col-md-offset-3 -->
</div><!-- /.row -->
<div class="row article-list">
  {{#each article}}
    <div class="col-sm-8 col-sm-offset-2">
      <div class="thumbnail">
        <img src="{{imgSrc}}" alt="{{imgAlt}}">
        <div class="caption">
          <h3>{{title}}</h3>
          <p>{{description}}</p>
          <p><a href="{{url}}" class="btn btn-default" role="button" target="_blank" >View article</a></p>
        </div>
      </div>
    </div>
  {{/each}}
</div>